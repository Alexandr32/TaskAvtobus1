@model WebApplication1.Models.Link

@{
    ViewData["Title"] = "Информация";
}

<h1>Информация о ссылке</h1>

<div>
    <h4>Ссылка</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LongURL)
        </dt>
        <dd class = "col-sm-10">
            <a href="@Model.LongURL">@Model.LongURL</a>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShortURL)
        </dt>
        <dd class="col-sm-10">
            <a href="@Model.ShortURL">@Model.ShortURL</a>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateCcreation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateCcreation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Count)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Count)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a> |
    <a asp-action="Index">Назад к списку</a>
</div>
