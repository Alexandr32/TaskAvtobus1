@model IEnumerable<WebApplication1.Models.Link>

@{
    ViewData["Title"] = "Список";
}

<h1>Список</h1>

<p>
    <a asp-action="Create">Создать новую ссылку</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LongURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShortURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCcreation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Count)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a href="@item.LongURL">@item.LongURL</a>
            </td>
            <td>
                <a href="@item.ShortURL">@item.ShortURL</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCcreation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Информация</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
